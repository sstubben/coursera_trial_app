<h1>Searching for - <%= @search_term %></h1>

<%= link_to "Say Hello", greeter_hello_path %>

<% if @courses.nil? %>
<p>No courses found. Sorry..</p>
<% else %>

<table border="1">
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @courses.each do |course| %>
	<tr class=<%= cycle('even','odd') %> >
		<td><%= image_tag(course["smallIcon"])%></td>
		<td><%= course["name"]%></td>
		<td><%= course["shortDescription"] %></td>
	</tr>
	<% end %>
</table>

<% end %>